$orangePeel := #ff6d00;
@import "./table.styl"
@import "app/components/MessageCenter.styl"

body {
  font-size: 14px;
  background: #f2f2f2;
}

.aboutBody {
  max-width: 700px;
  margin: auto;
}

.managementApp {
  flex-grow: 1;
  height: inherit;
  overflow: auto;
  position: relative;
}

.gb-nav, .gb-nav md-content {
  background-color: #fafafa;
  overflow: hidden;
}

header-component {
  z-index: 5;
  //background: orange;
  //color: white;
}

nav-component {
  z-index: 2;
}

.table-responsive-vertical {
  width: 100%;
}

.card-area {
  margin: 20px;
}

.white {
  background: white;
}

.gb-nav .menuItem {
  p {
    text-transform: uppercase;
    font-weight: 500;
  }
  &.isActive {
    color: $orangePeel;
  }
}

.text-red {
  color: tomato;
}

.text-yellow {
  color: orange;
}

.text-green {
  color: darken(darkseagreen, 20);
}

.badge {
  color: white;
  padding: 3px 5px;
  border-radius: 3px;
}
.badge-red {
  @extends .badge
  background: tomato;
}

.badge-yellow {
  @extends .badge
  background: orange;
}

.badge-green {
  @extends .badge
  background: darkseagreen;
}

.grey-background {
  background: #ececec;
}

.text-right {
  text-align: right;
}

.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.navLogo {
  border-bottom: 1px solid #ddd;
  background: #444;
  padding: 10px 20px;
  img {
    width: 100%;
    max-width: 125px;
    margin: auto;
    display: block;
    padding: 0;
  }
}

.emptyInfo {
  color: #999;
  text-align: center;
  margin: 30px;
}

h1, h2, h3, h4 {
  font-weight: 400;
}

.btnLink {
  cursor: pointer;
  color: inherit;
  text-decoration: none;
  &:hover {
    text-decoration: none;
    color: inherit;
  }
}

.whiteSpace-nowrap {
  white-space: nowrap;
}

.underline {
  text-decoration: underline;
}

.inline-block {
  display: inline-block;
}

.wordBreak-all {
  word-break: break-all;
}


/* json markup styles */
.jsonDump {
  padding: 20px;
  background: #f9f9f9;
  border: 1px solid #ddd;
  border-width: 1px 0;
  overflow: auto;
}
.json-markup {
  line-height:17px;
  font-size:13px;
  font-family:monospace;
  white-space:pre;
}
.json-markup-key {
  color: black;
  font-weight: 500;
}
.json-markup-number {
  color: blue;
}
.json-markup-string {
  color: green;
  white-space: normal;
}


.navFavorites {
  h2 {
    font-size: 10px;
    color: #aaa;
    text-align: right;
    margin: 0;
    padding: 5px 10px;
  }
  ul {
    padding: 0 10px 0 15px;
    margin: 0;
  }
  li {
    color: #aaa;
    a {
      color: inherit;
      text-decoration: none;
    }
  }
}

.pull-right {
  float:right;
}
.clearfix::after {
  display: block;
  content: "";
  clear: both;
}

dl.asTable {
  display: table;
  >div {
    display: table-row;
  }
  dt,dd {
    display: table-cell;
    padding: 5px 10px 5px 0;
  }
  dt {
    padding-right: 30px;
    white-space: nowrap;
  }
}

.inlineList, .inlineClassification {
  a:after, span:after {
    font-style: normal;
    content: ' \25CF ';
    font-size: 80%;
    color: #ccc;
    display: inline-block;
    padding: 0 3px;
  }
  span:last-of-type:after, a:last-of-type:after {
    display: none;
  }
  a {
    color: inherit;
  }
  &.discreet {
    span, a {
      color: #666;
      &:hover {
        color: #666;
      }
    }
  }
  .genus, .species {
    font-style: italic;
  }
}

.inlineClassification {
  a:after, span:after {
    content: ' \276f ';
  }
}

.simpleBarChart {
  h4 {
    text-transform: uppercase;
    color: #828282;
    text-align: center;
  }
  .simpleBarChart_row {
    text-transform: capitalize;
    display: flex;
  }
  .simpleBarChart_name, .simpleBarChart_bar {
    padding: 10px;
  }
  .simpleBarChart_name {
    display: inline-block;
    width: 50%;
    flex: 0 0 auto;
    text-align: right;
  }
  .simpleBarChart_bar {
    display: inline-block;
    flex: 1 1 auto;
    width: 100%;
    max-width: 400px;
    >span {
      display: inline-block;
      background: deepskyblue;
      color: white;
      border-radius: 4px;
      padding: 5px;
    }
  }
}
